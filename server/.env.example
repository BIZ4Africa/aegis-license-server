# AEGIS License Server - Environment Configuration
# Copy this file to .env and customize for your environment

# ===== Application =====
APP_NAME="AEGIS License Server"
APP_VERSION="1.0.0"
ENVIRONMENT=production  # development, staging, or production
DEBUG=false

# ===== Server =====
HOST=0.0.0.0
PORT=8000
RELOAD=false  # Set to true only in development

# ===== Database =====
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://aegis:CHANGE_ME@localhost:5432/aegis
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ===== Security - Signing Keys =====
# Path to Ed25519 private key for signing licenses
PRIVATE_KEY_PATH=keys/aegis-2026-01.private.pem
PUBLIC_KEY_PATH=keys/aegis-2026-01.public.pem
KEY_ID=aegis-2026-01

# ===== Security - API Authentication =====
# CRITICAL: Generate a strong random key for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
API_SECRET_KEY=CHANGE_ME_TO_LONG_RANDOM_STRING_IN_PRODUCTION
API_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===== License Settings =====
LICENSE_ISSUER=https://license.biz4a.com
DEFAULT_DEMO_DURATION_DAYS=30

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # requests per minute

# ===== CORS =====
CORS_ENABLED=true
# Comma-separated list of allowed origins
CORS_ORIGINS=https://portal.biz4a.com,https://admin.biz4a.com

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
